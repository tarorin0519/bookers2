<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>


<div class="container">
  <div clas="row">
<%= render 'books/new', book: @book, user: @books.user %>
    <div class="col-lg-9">
<h2>Book detail</h2>

<table class="table">
	<tr>
		<td>
			<%= link_to user_path(@books.user) do %>
			<%= attachment_image_tag @books.user,:profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
			<%= @books.user.name %>
			<% end %>
		</td>
		<td>
			<%= link_to @books.title, book_path(@books) %>
		</td>
		<td><%= @books.body %></td>
	<% if @books.user == current_user %>
  		<td><%= link_to "Edit", edit_book_path(@books.id) %></td>
  		<td><%= link_to "Destroy", book_path(@books), method: :delete %></td>
	<% end %>
	</tr>
</table>
	</div>
  </div>
</div>
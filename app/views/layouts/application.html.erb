<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav class="navbar navbar-inverse">
            <div class="container">
              <div class="nav navbar-nav navbar-left">
                <span>Bookers</span>
              </div>
              <ul class="nav navbar-nav navbar-right">

              <% if user_signed_in? %>
                <li>
                <%= link_to 'Home', user_path(current_user.id), class:"glyphicon glyphicon-home" %>
                </li>
                <li>
                  <%= link_to 'Users', users_path, class:'glyphicon glyphicon-link' %>
                </li>
                <li>
                  <%= link_to 'Books', books_path, class:'glyphicon glyphicon-edit' %>
                </li>
                <li>
                  <%= link_to "logout", destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-log-in" %>
                </li>
              <% else %>
                <li>
                  <%= link_to "Home",root_path, class:"glyphicon glyphicon-home" %>
                  </li>
                <li>
                  <%= link_to "About",home_about_path, class:"glyphicon glyphicon-user" %>
                </li>
                <li>
                  <%= link_to "sign up", new_user_registration_path, class:"glyphicon glyphicon-book" %>
                </li>
                <li>
                  <%= link_to "login", new_user_session_path,  class:"glyphicon glyphicon-log-out" %>
                </li>
              <% end %>

              </ul>
            </div>
        </nav>
    <%= yield %>

    <footer>
      <div class="container">
        <div class="row">
          <div class='col-lg-3 col-lg-offset-9'>
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>



  </body>
</html>
